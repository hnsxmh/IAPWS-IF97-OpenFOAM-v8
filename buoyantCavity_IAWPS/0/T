FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 500;

boundaryField
{
    frontAndBack
    {
        type            zeroGradient;
    }

    topAndBottom
    {
        type            zeroGradient;
    }

    hot
    {
        // type            zeroGradient;
        type            fixedValue;
        value           uniform 550; // 34.6 degC
    }

    cold
    {
        // type            zeroGradient;
        type            fixedValue;
        value           uniform 500; // 15 degC
    }
}


